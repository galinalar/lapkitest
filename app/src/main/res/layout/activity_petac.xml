<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".PetAc">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/statuss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Статус"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_launcher_foreground" />
                        <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Имя "
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"/>

        </LinearLayout>
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Данные о питомце"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/lightb"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/bd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Дата рождения: "
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Описание: "
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Вид: "
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/she"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Приют: "
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Пол: "
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/por"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Порода: "
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Активный: "
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Размер: "
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/hypo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Гипоаллергенный: "
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/dressir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Дрессировка: "
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/dogs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Отношения с другими собаками: "
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/animal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Отношения с другими животными: "
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Отношения с грудничками: "
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/children"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Отношения с детьми: "
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/teens"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Отношения с подростками: "
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/ils"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Болезни: "
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/sounds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Отношения к громким звукам: "
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/talk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Общительность: "
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/rolid"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:text=""
                    android:textColor="@color/black"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/shelid"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:text=""
                    android:textColor="@color/black"
                    android:visibility="invisible"/>
                <Button
                    android:id="@+id/ch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Изменить данные" />
                <Button
                    android:id="@+id/del"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Удалить питомца" />
            </LinearLayout>

            <Button
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Проверить совместимость/Результаты" />

            <Button
                android:id="@+id/req"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Заполнить заявку на опекунство" />

            <Button
                android:id="@+id/shelt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вернутся к приюту" />

            <Button
                android:id="@+id/ret"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вернутся к списку" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>